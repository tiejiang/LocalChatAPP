<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <android.support.v4.view.ViewPager
        android:id="@+id/face_dialog_viewpager"
        android:layout_width="match_parent"
        android:layout_height="120dip"
        />
    
    <LinearLayout
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        >
        
        <ImageView 
            android:id="@+id/face_dialog_dot_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot_unselected"
            android:layout_marginLeft="3dip"
            />
        <ImageView 
            android:id="@+id/face_dialog_dot_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot_unselected"
            android:layout_marginLeft="3dip"
            />
        <ImageView 
            android:id="@+id/face_dialog_dot_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot_unselected"
            android:layout_marginLeft="3dip"
            />
        <ImageView 
            android:id="@+id/face_dialog_dot_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot_unselected"
            android:layout_marginLeft="3dip"
            />
        <ImageView 
            android:id="@+id/face_dialog_dot_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot_unselected"
            android:layout_marginLeft="3dip"
            />
        <ImageView 
            android:id="@+id/face_dialog_dot_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot_unselected"
            android:layout_marginLeft="3dip"
            />
    </LinearLayout>
</LinearLayout>