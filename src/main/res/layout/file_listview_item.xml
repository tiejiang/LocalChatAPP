<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    
    <ImageView 
        android:id="@+id/file_listview_item_img"
        android:layout_width="@dimen/file_img_width"
        android:layout_height="@dimen/file_img_width"
        android:layout_margin="@dimen/file_img_margin"
        />
    <TextView 
        android:id="@+id/file_listview_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/file_name_size"
        android:layout_gravity="center_vertical"
        />

</LinearLayout>